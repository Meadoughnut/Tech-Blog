<h1>{{title}}</h1>
<p>Posted by {{username}} on {{createdAt}}</p>

<div>
    <p>{{content}}</p>
</div>

<h2>Comments</h2>

{{#if comments.length}}
    <ul>
        {{#each comments}}
            <li>
                <p>{{username}}: {{comment}} ({{createdAt}})</p>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No comments yet. Be the first to comment!</p>
{{/if}}

{{#if loggedIn}}
    <form action="/post/{{id}}/comment" method="POST">
        <textarea name="comment" required></textarea>
        <button type="submit">Submit Comment</button>
    </form>
{{else}}
    <p>You need to <a href="/login">log in</a> to comment.</p>
{{/if}}
